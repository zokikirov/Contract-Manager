@model Client.Models.DashboardViewModel

@{
	ViewBag.Title = "Contract Management";
}

<div class="panel panel-info panelBackground">
	<div class="panel-heading"><h3 class="text-dark">Dashboard</h3></div>
	<div class="panel-body">
		<br />
		<div class="row">
			<div class="col-md-4">
				<div class="card bg-light mb-3">
					<div class="card-header text-center">Users</div>
					<div class="card-body text-center">
						<h1 class="card-title">@Model.NumberOfUsers</h1>
					</div>
				</div>
			</div>

			<div class="col-md-4">
				<div class="card bg-light mb-3">
					<div class="card-header text-center">Requests send</div>
					<div class="card-body text-center">
						<h1 class="card-title">@Model.RequestsSend</h1>
					</div>
				</div>
			</div>

			<div class="col-md-4">
				<div class="card bg-light mb-3">
					<div class="card-header text-center">Signed Contracts</div>
					<div class="card-body text-center">
						<h1 class="card-title">@Model.SignedContracts</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>